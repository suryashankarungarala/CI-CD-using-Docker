pipeline {
    agent any
    environment {
        DOCKERHUB_CREDENTIALS = credentials('suryashankar598-dockerhub')
    }

    stages {
        stage('git checkout') {
            steps {
                git 'https://github.com/suryashankarungarala/CI-CD-using-Docker.git'
            }
        }
       stage('Execute Maven') {
           steps {
             
                sh 'mvn package'             
          }
        }
        

  stage('Docker Build and Tag') {
           steps {
              
                sh 'docker build -t samplewebapp:latest .' 
                sh 'docker tag samplewebapp suryashankar598/samplewebapp:latest'
                sh 'docker --version'
                //sh 'docker tag samplewebapp suryashankar598/samplewebapp:$BUILD_NUMBER'
               
          }
        }
     
  stage('Publish image to Docker Hub') {
          
            steps {
         sh 'echo $DOCKERHUB_CREDENTIALS_PSW | docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin'
          sh  'docker push suryashankar598/samplewebapp:latest'
            }     
        }
     
      stage('Run Docker container on Jenkins Agent') {
             
            steps 
			{
                sh "docker run -d -p 8003:8080 suryashankar598/samplewebapp"
 
            }
        }
        stage('Run Docker container on remote hosts') {
             
            steps {
                sh "docker -H ssh://jenkins@172.31.80.146 run -d -p 8003:8080 suryashankar598/samplewebapp"
 
            }
        }
    }
}    
